{
  "name": "countdown-timer",
  "version": "1.0.0",
  "description": "Application that allows you to set a occasional countdown timer",
  "scripts": {
    "watch-sass": "sass ./style.scss ./style.css -w",
    "live": "live-server",
    "start": "npm-run-all -p watch-sass live",
    "compile-sass": "sass ./style.scss ./style.comp.css",
    "prefix-css": "postcss --use autoprefixer browserslist 'last 10 versions' .style.comp.css -output ./style.prefix.css",
    "compress-css": "sass ./style.prefix.css ./style.css --output-style compressed",
    "build-css": "npm-run-all compile-sass prefix-css compress-css",
    "build-html": "parcel build ./index.html --dist-dir ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RiddickB89/Counter.git"
  },
  "browserslist": "last 10 versions",
  "author": "Sebastian Paluch",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RiddickB89/Counter/issues"
  },
  "homepage": "https://github.com/RiddickB89/Counter#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "node": "^19.8.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.8.3",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "sass": "^1.61.0"
  }
}
